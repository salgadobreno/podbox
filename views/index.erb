  <body>

    <div class="container text-center">

      <form action='/' method='post' class="form-signin">
        <h2 class="form-signin-heading">SoundTuber.rb</h2>
        <% [:success, :error].select { |kind| flash.has?(kind) }.each do |kind| %>
          <div class="alert alert-<%= kind.to_s %>">
            <%= flash[kind] %>
          </div>
        <% end %>
        <input name="url" type="text" class="input-block-level" placeholder="http://www.youtube........">
        <button class="btn btn-large btn-primary" type="submit">MP3 this for me, please.</button>
      </form>

